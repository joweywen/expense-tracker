{
  "name": "expense-tracker",
  "version": "2.1.0",
  "description": "Electron费用统计应用 - 双币种 + SQLite持久化",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=5858",
    "build": "electron-builder",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "electron",
    "expense",
    "tracker",
    "sqlite"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.5.0"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.1"
  },
  "build": {
    "appId": "com.example.expensetracker",
    "productName": "费用统计器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.db-shm",
      "!**/*.db-wal"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
